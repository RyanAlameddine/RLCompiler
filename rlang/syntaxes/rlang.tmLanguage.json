{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "rLang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"operators": {
			"patterns": [{
				"name": "keyword.other.rlang",
				"match": "(\\*|\\+|\\-|!|!=|/|=|==|\\||\\|\\||&|&&|:|\\<|\\>|\\>=|\\<=|\\(|\\)|,|\\.|\\[|\\])"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.rlang",
				"match": "\\b(new|if|elif|else|while|for|public|private|internal|ret|in|namespace|class|def|var)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.rlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rlang",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"name": "entity.name.type.rlang",
			"match": "(((?<!::)(?<=:)|(?<=class)) *\\b[a-zA-Z_][a-zA-Z]*\\b|(?<=::)(?<=:) *\\b[a-zA-Z_][a-zA-Z]*\\b *$)"
		},
		"functions": {
			"name": "entity.name.function.rlang",
			"match": ""
		},
		"comments": {
			"name": "comment.line.number-sign.rlang",
			"begin": "#",
			"end": "\n"
		}
	},
	"scopeName": "source.rl"
}