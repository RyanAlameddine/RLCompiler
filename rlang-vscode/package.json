{
    "name": "rlang",
    "displayName": "rLang Language Support",
    "description": "Adds language support for the rLang programming language created by Github User RyanAlameddine",
    "publisher": "rhalameddine",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:rlang"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run lint",
        "compile": "tsc -p ./",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "contributes": {
        "languages": [
            {
                "id": "rlang",
                "aliases": [
                    "rLang",
                    "rlang"
                ],
                "extensions": [
                    ".rl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "views": {
            "explorer": [
                {
                "id": "rLangAST",
                "name": "rLang AST"
                }
            ]
        },
        "snippets": [
            {
              "language": "rlang",
              "path": "./snippets.json"
            }
        ],
        "grammars": [
            {
                "language": "rlang",
                "scopeName": "source.rl",
                "path": "./syntaxes/rlang.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "rLangAST.jumpTo",
                "title": "jumpTo"
            }
        ],
        "menus": {
            "view/item/context": [{
                "command": "rLangAST.jumpTo",
                "when": "view == rLangAST",
                "group": "inline"
            }],
            "commandPalette": [
                {
                  "command": "rLangAST.jumpTo",
                  "when": "false"
                }
              ]
        }
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.21",
        "vscode-jsonrpc": "^4.0.0",
        "vscode-languageclient": "^5.1.1"
    }
}
